<root>
    <!-- Main Panel - Centered with semi-transparent dark background -->
    <panel id="main_panel" width="320" height="320" x="50%-160" y="50%-160" layer="1"
           color="0x222222" border="1" border-color="0x444444" rounding="5">
        
        <!-- Title Bar -->
        <panel width="100%" height="35" color="0x3366CC" rounding="5 5 0 0">
            <label text="âš¡ AutoClicker Control Panel" x="50%" y="50%" align="center" color="0xFFFFFF" shadow="true"/>
        </panel>

        <!-- Status Display -->
        <label text="Status: {AutoClickerScreen.getEnabled() ? '&aENABLED' : '&cDISABLED'}" 
               x="15" y="50" color="0xFFFFFF"/>
        <label text="Current CPS: {AutoClickerScreen.getCps()}" x="15" y="70" color="0xAAAAAA"/>
        <label text="Mode: {AutoClickerScreen.getClickMode()}" x="15" y="90" color="0xAAAAAA"/>

        <!-- CPS Control Section -->
        <label text="Clicks Per Second (CPS):" x="15" y="120" color="0xDDDDDD"/>
        <label text="{AutoClickerScreen.getCps()}" id="cps_display" x="295" y="120" align="right" color="0x00FF00"/>
        
        <slider id="cps_slider" x="15" y="140" width="290" min="1" max="25" step="1"
                value="{AutoClickerScreen.getCps()}"
                action="AutoClickerScreen.setCps(this.value); cps_display.text = this.value;"/>

        <!-- Quick CPS Buttons -->
        <panel x="15" y="170" width="290" height="30">
            <button text="5 CPS" width="65" height="25" 
                    action="cps_slider.value = 5; AutoClickerScreen.setCps(5); cps_display.text = 5;"/>
            <button text="10 CPS" width="65" height="25" x="75"
                    action="cps_slider.value = 10; AutoClickerScreen.setCps(10); cps_display.text = 10;"/>
            <button text="15 CPS" width="65" height="25" x="150"
                    action="cps_slider.value = 15; AutoClickerScreen.setCps(15); cps_display.text = 15;"/>
            <button text="20 CPS" width="65" height="25" x="225"
                    action="cps_slider.value = 20; AutoClickerScreen.setCps(20); cps_display.text = 20;"/>
        </panel>

        <!-- Click Mode Selection -->
        <label text="Click Mode:" x="15" y="210" color="0xDDDDDD"/>
        <dropdown id="mode_dropdown" x="15" y="230" width="290" 
                  options="SPAM,HOLD,SMART" 
                  selected="{AutoClickerScreen.getClickMode()}"
                  action="AutoClickerScreen.setClickMode(this.selected);">

            <option value="SPAM" text="Spam Mode (Rapid Clicks)"/>
            <option value="HOLD" text="Hold Mode (Continuous Press)"/>
            <option value="SMART" text="Smart Mode (Only When You Hold)"/>
        </dropdown>

        <!-- Master Toggle Button -->
        <button id="toggle_btn" text="{AutoClickerScreen.getEnabled() ? '&cDISABLE AutoClicker' : '&aENABLE AutoClicker'}" 
                x="15" y="270" width="290" height="35"
                action="AutoClickerScreen.setEnabled(!AutoClickerScreen.getEnabled()); 
                        toggle_btn.text = AutoClickerScreen.getEnabled() ? '&cDISABLE AutoClicker' : '&aENABLE AutoClicker';"/>

        <!-- Close Button -->
        <button text="&7Close" x="15" y="315" width="290" height="25"
                action="this.screen.close();"/>

        <!-- Footer Info -->
        <label text="Toggle: &f[&60&f]" x="15" y="350" color="0x888888"/>
        <label text="GUI: &f[&6R&f]" x="150" y="350" color="0x888888"/>
        <label text="Max: 25 CPS" x="295" y="350" align="right" color="0x888888"/>
    </panel>
</root>